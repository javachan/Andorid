<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bts.btsapp"    >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" android:screenOrientation="portrait" />
        <activity android:name=".RoomClass" android:screenOrientation="portrait" />
        <activity android:name=".Fragment.MainFragment" android:screenOrientation="portrait" />
        <activity android:name=".UserActivity" android:screenOrientation="portrait"/>
        <activity android:name=".UserRoomActivity" android:screenOrientation="portrait"/>
        <activity android:name=".UploadActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>