<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Pazartesi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bpazartesi"
            android:layout_weight="1" />

        <Button
            android:text="salı"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bsali"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="çarşamba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bcarsamba"
            android:layout_weight="1" />

        <Button
            android:text="Perşembe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bpersembe"
            android:layout_weight="1" />

        <Button
            android:text="cuma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bcuma"
            android:layout_weight="1" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/degisecekVeri"
        android:hint="Degisecek Veriyi Giriniz" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="0.9"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="8:00-9:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/b1"
                    android:layout_weight="1" />

                <Button
                    android:text="9:00-10:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/b2"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="10:00-11:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/b3"
                    android:layout_weight="1" />

                <Button
                    android:text="11:00-12:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/b4"
                    android:layout_weight="1" />
            </LinearLayout><LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="13:00-14:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b5"
                android:layout_weight="1" />

            <Button
                android:text="14:00-15:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b6"
                android:layout_weight="1" />
        </LinearLayout><LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="15:00-16:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b7"
                android:layout_weight="1" />

            <Button
                android:text="16:00-17:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b8"
                android:layout_weight="1" />
        </LinearLayout><LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="17:00-18:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b9"
                android:layout_weight="1" />

            <Button
                android:text="18:00-19:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b10"
                android:layout_weight="1" />
        </LinearLayout><LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="19:00-20:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b11"
                android:layout_weight="1" />

            <Button
                android:text="20:00-21:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b12"
                android:layout_weight="1" />
        </LinearLayout><LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="21:00-22:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b13"
                android:layout_weight="1" />

            <Button
                android:text="22:00-23:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/b14"
                android:layout_weight="1" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>